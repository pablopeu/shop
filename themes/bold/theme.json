{
    "name": "Bold",
    "slug": "bold",
    "version": "1.0.0",
    "description": "Un diseño atrevido e impactante con alto contraste. Perfecto para tecnología, deportes y gaming.",
    "author": "Shop Team",
    "preview_image": "/themes/bold/preview.jpg",

    "features": {
        "dark_mode": false,
        "animations": "sharp",
        "border_style": "sharp",
        "shadow_style": "hard",
        "color_scheme": "high-contrast"
    },

    "colors": {
        "primary": "#e74c3c",
        "primary_dark": "#c0392b",
        "primary_light": "#ec7063",
        "secondary": "#000000",
        "success": "#27ae60",
        "warning": "#f39c12",
        "error": "#e74c3c",
        "info": "#3498db",
        "text": "#000000",
        "background": "#ffffff"
    },

    "typography": {
        "font_family": "sans-serif-bold",
        "font_family_heading": "impact",
        "heading_weight": "900",
        "base_size": "16px",
        "line_height": "1.4"
    },

    "spacing": {
        "base_unit": "8px",
        "scale": "linear"
    },

    "components": {
        "buttons": {
            "style": "filled",
            "rounded": false,
            "shadow": true
        },
        "cards": {
            "border": true,
            "shadow": true,
            "rounded": false,
            "hover_effect": "shadow"
        },
        "forms": {
            "style": "bold",
            "border_style": "solid-thick",
            "focus_ring": true
        }
    },

    "layout": {
        "container_width": "1200px",
        "grid_gap": "24px",
        "sidebar_width": "280px"
    },

    "compatibility": {
        "requires_php": "7.4",
        "requires_css": "3",
        "mobile_optimized": true,
        "rtl_support": false,
        "accessibility": "wcag-aa"
    },

    "tags": [
        "bold",
        "strong",
        "impactful",
        "gaming",
        "tech",
        "sports"
    ],

    "created_at": "2025-11-05",
    "updated_at": "2025-11-05"
}
