{
    "name": "Vibrant",
    "slug": "vibrant",
    "version": "1.0.0",
    "description": "Un diseño maximalista y energético con colores audaces, layout dinámico tipo mosaico y animaciones dramáticas. Inspirado en pop art y Memphis design. Perfecto para marcas juveniles, productos de lifestyle y bazares creativos.",
    "author": "Shop Team",
    "preview_image": "/themes/vibrant/preview.jpg",

    "features": {
        "dark_mode": false,
        "animations": "bouncy",
        "border_style": "thick",
        "shadow_style": "colored",
        "color_scheme": "saturated-pop"
    },

    "colors": {
        "primary": "#FF006E",
        "primary_dark": "#D90062",
        "primary_light": "#FF3D8E",
        "secondary": "#FFBE0B",
        "success": "#8AC926",
        "warning": "#FB5607",
        "error": "#FF006E",
        "info": "#3A86FF",
        "text": "#1A1A1A",
        "background": "#FFFBF5"
    },

    "typography": {
        "font_family": "'Work Sans', 'Arial', sans-serif",
        "font_family_heading": "'Archivo Black', 'Arial Black', sans-serif",
        "heading_weight": "900",
        "base_size": "16px",
        "line_height": "1.6"
    },

    "spacing": {
        "base_unit": "8px",
        "scale": "compact"
    },

    "components": {
        "buttons": {
            "style": "filled-bold",
            "rounded": true,
            "shadow": true
        },
        "cards": {
            "border": true,
            "shadow": true,
            "rounded": true,
            "hover_effect": "pop"
        },
        "forms": {
            "style": "bold",
            "border_style": "thick",
            "focus_ring": true
        }
    },

    "layout": {
        "container_width": "1300px",
        "grid_gap": "20px",
        "sidebar_width": "300px"
    },

    "compatibility": {
        "requires_php": "7.4",
        "requires_css": "3",
        "mobile_optimized": true,
        "rtl_support": false,
        "accessibility": "wcag-aa"
    },

    "tags": [
        "vibrant",
        "energetic",
        "pop",
        "maximalist",
        "colorful",
        "bold"
    ],

    "created_at": "2025-11-14",
    "updated_at": "2025-11-14"
}
